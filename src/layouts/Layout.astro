---
// src/layouts/Layout.astro
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="id" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portofolio Fawwaz Afkar Muzakky" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-gray-50 text-gray-800 font-sans">
		<nav class="sticky top-0 bg-white/80 backdrop-blur-md shadow-sm z-1">
			<div class="container mx-auto px-4 py-3 flex justify-between items-center">
				<a href="#hero" class="font-bold text-xl text-gray-900">FM</a>
				<div class="space-x-6">
					<a href="#projects" class="hover:text-sky-500">Projects</a>
					<a href="#skills" class="hover:text-sky-500">Skills</a>
					<a href="#experience" class="hover:text-sky-500">Experience</a>
					<a href="#certificates" class="hover:text-sky-500">Certificate</a>
					<a href="#contact" class="hover:text-sky-500">Contact</a>
				</div>
			</div>
		</nav>
		<main>
			<slot />
		</main>
		<footer class="text-center py-8 bg-gray-100 mt-16">
			<p>&copy; {new Date().getFullYear()} Fawwaz Afkar Muzakky. All rights reserved.</p>
		</footer>
	</body>
</html>