---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

interface GitHubRepo {
  name: string;
  html_url: string;
  description: string | null; // description bisa jadi null
  topics: string[];
}

let repos: GitHubRepo[] = []; // Inisialisasi sebagai array kosong
try {
    const response = await fetch('https://api.github.com/users/FawwazAfkar/repos?sort=updated&per_page=6');
    if (response.ok) {
        const data = await response.json();
        // Pastikan data yang diterima adalah array
        if (Array.isArray(data)) {
            repos = data;
        }
    } else {
        console.error('GitHub API request failed:', response.statusText);
    }
} catch (error) {
    console.error('Failed to fetch from GitHub API:', error);
}
