---
// src/components/ProjectCard.astro
const { repo } = Astro.props;
---
<a href={repo.html_url} target="_blank" class="block bg-white p-6 rounded-lg shadow-md hover:shadow-xl hover:-translate-y-1 transition-all">
  <h3 class="font-bold text-xl mb-2 text-sky-700">{repo.name}</h3>
  <p class="text-gray-600 text-sm mb-4">{repo.description || 'No description available.'}</p>
  <div class="flex flex-wrap gap-2">
    {repo.topics.map((topic : string) => (
      <span class="text-xs bg-gray-200 px-2 py-1 rounded">{topic}</span>
    ))}
  </div>
</a>