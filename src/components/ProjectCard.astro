---
// src/components/ProjectCard.astro
interface Props {
  title: string;
  description: string;
  imgSrc: string;
  tags: string[];
  repoUrl: string;
}

const { title, description, imgSrc, tags, repoUrl } = Astro.props;
---
<div class="bg-white rounded-lg shadow-lg overflow-hidden flex flex-col h-full">
  <img src={imgSrc} alt={`Screenshot dari ${title}`} class="w-full h-48 object-cover">
  
  <div class="p-6 flex-grow flex flex-col">
    <h3 class="text-xl font-bold text-gray-900 mb-2">{title}</h3>
    <p class="text-gray-600 text-sm mb-4 flex-grow">{description}</p>
    
    <div class="mb-6">
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <span class="bg-sky-100 text-sky-800 text-xs font-semibold px-2.5 py-1 rounded-full">{tag}</span>
        ))}
      </div>
    </div>
    
    <div class="mt-auto">
      <a href={repoUrl} target="_blank" rel="noopener noreferrer" class="inline-block w-full text-center bg-gray-800 text-white font-semibold py-2 px-4 rounded-lg hover:bg-gray-900 transition-colors">
        Lihat Repository &rarr;
      </a>
    </div>
  </div>
</div>